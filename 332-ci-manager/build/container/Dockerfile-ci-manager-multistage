# To be used when building in CIE
FROM us.gcr.io/platform-205701/cie-agent-harness-core-jdk11:latest as builder

RUN mkdir -p /app
ARG GCP_KEY
ENV SERVICE_NAME="ci-manager"
COPY . /app

WORKDIR /app

ENV BUILD_PURPOSE=DEVELOPMENT
ENV PLATFORM="jenkins"

RUN chmod +x \
    /app/build/feature_build.sh \
    /app/build/build_dist.sh \
    /app/scripts/bazel/generate_credentials.sh \
    && /app/scripts/bazel/generate_credentials.sh \
    && /app/build/feature_build.sh $GCP_KEY

FROM us.gcr.io/platform-205701/ubi/ubi-java:8.8 as base

# Add the capsule JAR and ci-manager-config.yml
COPY --chown=65534:65534 --from=builder \
 /app/dist/332-ci-manager/ci-manager-capsule.jar \
 /app/dist/332-ci-manager/keystore.jks \
 /app/dist/332-ci-manager/enterprise-redisson-jcache.yaml \
 /app/dist/332-ci-manager/classpath_metadata.json \
 /app/dist/332-ci-manager/ci-manager-config.yml \
 /app/dist/332-ci-manager/redisson-jcache.yaml \
 /app/dist/332-ci-manager/ci-manager-protocol.info \
 /app/dist/332-ci-manager/scripts \
 /app/dist/332-ci-manager/default.jfc \
 /app/dist/332-ci-manager/profile.jfc \
 /app/dockerization/base-images/apm/*.sh \
 /opt/harness/

RUN ls  /opt/harness/
RUN pwd



RUN chmod +x /opt/harness/*.sh
CMD [ "/opt/harness/run.sh" ]


############################ON PREM#########################
FROM base as onprem

RUN /opt/harness/inject-onprem-apm-bins-into-dockerimage.sh && rm /opt/harness/inject-onprem-apm-bins-into-dockerimage.sh
USER root
RUN microdnf remove tar unzip gzip
USER 65534


############################SAAS#########################
FROM base as saas

RUN /opt/harness/inject-saas-apm-bins-into-dockerimage.sh && rm -rf /opt/harness/inject-saas-apm-bins-into-dockerimage.sh

USER root