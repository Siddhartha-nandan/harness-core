# to be used when building in Jenkins

FROM us.gcr.io/platform-205701/cie-agent-harness-core-jdk11:latest as builder

RUN mkdir -p /app
COPY . /app
ARG GCP_KEY
ENV SERVICE_NAME="migrator"
WORKDIR /app

ENV BUILD_PURPOSE=DEVELOPMENT

RUN chmod +x \
 /app/build/feature_build.sh \
 /app/build/build_dist.sh  \
 /app/scripts/bazel/generate_credentials.sh \
 && /app/scripts/bazel/generate_credentials.sh \
 && /app/build/feature_build.sh $GCP_KEY \
 && /app/build/build_dist.sh || true

FROM us.gcr.io/platform-205701/ubi/ubi-java:8.8 as base

# Add the capsule JAR and config.yml
COPY --chown=65534:65534--from=builder \
  /app/dist/100-migrator/migrator-capsule.jar \
  /app/dist/100-migrator/newrelic.yml \
  /app/dist/100-migrator/keystore.jks \
  /app/dist/100-migrator/config.yml \
  /app/dist/100-migrator/redisson-jcache.yaml \
  /app/dist/100-migrator/ protocol.info \
  /app/dist/100-migrator/default.jfc \
  /app/dist/100-migrator/profile.jfc \
  /app/dist/100-migrator/container/scripts /opt/harness \
  /app/dockerization/base-images/apm/*.sh \
  /opt/harness/

USER root
RUN microdnf install -y yum
RUN yum -y install fontconfig dejavu-sans-fonts wget
RUN chmod +x /usr/bin/yq

RUN chmod +x /opt/harness/*.sh
CMD [ "/opt/harness/run.sh" ]

############################ON PREM#########################
FROM base as onprem
RUN /opt/harness/inject-onprem-apm-bins-into-dockerimage.sh && rm /opt/harness/inject-onprem-apm-bins-into-dockerimage.sh
USER root
RUN microdnf remove tar unzip gzip \
    && microdnf clean all \
    && rm -rf /var/cache/yum
USER 65534


############################SAAS#########################
FROM base as saas
RUN /opt/harness/inject-saas-apm-bins-into-dockerimage.sh && rm -rf /opt/harness/inject-saas-apm-bins-into-dockerimage.sh
USER root
