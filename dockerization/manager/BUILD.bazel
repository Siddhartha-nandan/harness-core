load("@io_bazel_rules_docker//container:container.bzl", "container_image", "container_pull", "container_push")
load("@io_bazel_rules_docker//docker/util:run.bzl", "container_run_and_commit_layer")
load("@rules_pkg//:pkg.bzl", "pkg_tar")

container_run_and_commit_layer(
    name = "manager-onprem-run",
    image = "@ubi-java-base//image",
    commands = [
        "curl -L https://harness.jfrog.io/artifactory/BuildsTools/docker/inspectit-ocelot-agent/inspectit-ocelot-agent-1.16.0.jar --output inspectit-ocelot-agent-1.16.0.jar",
        "chmod 711 inspectit-ocelot-agent-1.16.0.jar",
    ],
    tags = [
            "manual",
            "no-cache",
            "no-ide",
        ],
)

container_run_and_commit_layer(
    name = "manager-saas-run",
    image = "@ubi-java-base//image",
    commands = [
        "curl https://get.et.harness.io/releases/latest/nix/harness-et-agent.tar.gz --output harness-et-agent.tar.gz",
        "tar -xzf harness-et-agent.tar.gz -C /opt/harness",
        "rm /opt/harness/harness-et-agent.tar.gz",
        "curl https://harness.jfrog.io/artifactory/BuildsTools/docker/apm/appd/AppServerAgent-1.8-21.11.2.33305.zip --output AppServerAgent-1.8-21.11.2.33305.zip",
        "curl https://harness.jfrog.io/artifactory/BuildsTools/docker/apm/opentelemetry/opentelemetry-javaagent.jar --output opentelemetry-javaagent.jar",
        "chmod 711 /opt/harness/harness AppServerAgent-1.8-21.11.2.33305.zip opentelemetry-javaagent.jar",
    ],
    tags = [
            "manual",
            "no-cache",
            "no-ide",
        ],
)

pkg_tar(
    name = "scripts",
    srcs = glob([
        "scripts/*",
        ]),
    mode = "0500",
    owner = "65534.65534",
    package_dir = "/opt/harness",
    tags = [
                "manual",
                "no-cache",
                "no-ide",
            ],
)

pkg_tar(
    name = "files",
    srcs = [
        "//:protocol.info",
        "//360-cg-manager:newrelic.yml",
        "//360-cg-manager:keystore.jks",
        "//360-cg-manager:config.yml",
        "//400-rest/src/main/resources:redisson-jcache.yaml",
        "//400-rest/src/main/resources:hazelcast.xml",
    ],
    files = {
        "//360-cg-manager:module_deploy.jar": "rest-capsule.jar",
        },
    mode = "0500",
    owner = "65534.65534",
    package_dir = "/opt/harness",
    tags = [
                "manual",
                "no-cache",
                "no-ide",
            ],
)

container_image(
    name = "manager-saas-image",
    base = "@ubi-java-base//image",
    layers = [
        ":manager-saas-run"
        ],
    user = "65534",
    workdir = "/opt/harness",
    cmd = [
        "java -jar rest-capsule.jar scan-classpath-metadata",
        "./run.sh",
        ],
    tars = [
        ":files",
        ":scripts",
    ],
    env = {
    },
    tags = [
            "manual",
            "no-cache",
            "no-ide",
        ],
)

container_push(
        name = "manager-saas-push",
        format = "Docker",
        image = "manager-saas-image",
        registry = "us.gcr.io",
        repository = "platform-205701/harness/harness-services-bazel/manager-saas-bazel-test",
        tag = "latest-test",
        tags = [
                "manual",
                "no-cache",
                "no-ide",
            ],
)

container_image(
    name = "manager-onprem-image",
    base = "@ubi-java-base//image",
    layers = [
        ":manager-onprem-run"
        ],
    user = "65534",
    workdir = "/opt/harness",
    cmd = [
        "./run.sh",
        ],
    tars = [
        ":files",
        ":scripts",
    ],
    env = {
    },
    tags = [
            "manual",
            "no-cache",
            "no-ide",
        ],
)

container_push(
        name = "manager-onprem-push",
        format = "Docker",
        image = "manager-onprem-image",
        registry = "us.gcr.io",
        repository = "platform-205701/harness/harness-services-bazel/manager-onprem-bazel-test",
        tag = "latest-test",
        tags = [
                "manual",
                "no-cache",
                "no-ide",
            ],
)
